<div id="appMenuBar">
    <ul class="fb11_mega_menu">
        [% apps = c.menu_data %]
        [% FOR app IN apps %]
            <li class="fb11_mega_menu_item">
                <a href="#">[% app.controller.fb11_name %]</a>
                <div class="fb11_mega_menu_content [% c.generate_class_name(app.controller.fb11_name) %]">
                    <div>
                        <div class="menu_column">
                            [% FOR group IN app.actions %]
                                [% IF group.group %]
                                    <div class="fb11_mega_menu_group [% c.generate_class_name(group.group) %]">
                                        <p>
                                            [% group.group %]
                                        </p>
                                        <ul>
                                            [% FOR action IN group.actions %]
                                                [% IF (action.controller.fb11_method_group == group.group) %]
                                                    <li><a href="[% c.uri_for(action.controller.action_for(action.actionname)) %]">[% action.value %]</a></li>
                                                [% END %]
                                            [% END %]
                                        </ul>
                                    </div>
                                [% END %]
                            [% END %]
                        </div>
                    
                    </div>

                </div>
            </li>
        [% END %]
    </ul>
</div>

<script type="text/javascript">
    $(function() {
        var fb11_mega_menu_open = false;
        
        $('li.fb11_mega_menu_item > a').each(function() {
            $(this).click(function() {
                if (fb11_mega_menu_open) {
                    if ($(this).parent().hasClass('fb11_mega_menu_open')) {
                        $(this).parent().removeClass('fb11_mega_menu_open');
                        fb11_mega_menu_open = false;
                    } else {
                        $('li.fb11_mega_menu_item').each(function(){$(this).removeClass('fb11_mega_menu_open')});
                        $(this).parent().addClass('fb11_mega_menu_open');                        
                    }
                } else {
                    $(this).parent().addClass('fb11_mega_menu_open');
                    fb11_mega_menu_open = true;
                }
                
                return false;
            });
            
            $(this).mouseover(function(){
                if (fb11_mega_menu_open) {
                    if ($(this).parent().hasClass('fb11_mega_menu_open')) {
                        // already open so do nothing
                    } else {
                        $('li.fb11_mega_menu_item').each(function(){$(this).removeClass('fb11_mega_menu_open')});
                        $(this).parent().addClass('fb11_mega_menu_open'); 
                    }
                }
            });
        });
        
        $('div.fb11_mega_menu_content').click(function(eventObject){
            if($(eventObject.target).is("a")) {
                return true;
            } else {
                return false;
            }
        });
        
        $(window).click(function(){
            $('li.fb11_mega_menu_item').each(function(){$(this).removeClass('fb11_mega_menu_open')});
            fb11_mega_menu_open = false;
        });

        
        $('.fb11_mega_menu_item').each(function() {
            var total = 0;
            var menu = $(this);
            menu.find('.fb11_mega_menu_group').each(function() {
                var height = $(this).height();
                total += height;
            });
            if(total > 200) { // split into 2 columns
                var menu_column = menu.find('.menu_column');
                var new_column = $('<div class="menu_column"></div>');
                menu_column.after(new_column);
                var half_height = total / 2;
                var height_so_far = 0;
                menu.find('.fb11_mega_menu_group').each(function() {
                    if(height_so_far > half_height) {
                        $(this).appendTo(new_column);
                    } else {
                        var height = $(this).height();
                        height_so_far += height;
                    }
                });
            }
        });
    });
</script>
